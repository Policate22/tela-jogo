                    <div class="chat-image avatar">
                        <div class="w-10 rounded-full ${isUser ? 'bg-accent' : 'bg-secondary'}">
                            <i class="fas ${isUser ? 'fa-user' : 'fa-robot'} m-auto text-lg"></i>
                        </div>
                    </div>
                    <div class="chat-bubble ${isUser ? 'bg-accent text-accent-content' : 'bg-base-300'}">
                        ${message}
                    </div>
                `;
                
                elements.chatMessages.appendChild(messageDiv);
                elements.chatMessages.scrollTop = elements.chatMessages.scrollHeight;
            }

            function getAIResponse(message) {
                const lowerMsg = message.toLowerCase();
                let response = aiResponses.default;
                
                if (/^(oi|olá|ola|hello|hi)$/.test(lowerMsg)) response = aiResponses.oi;
                else if (lowerMsg.includes('como jogar') || lowerMsg.includes('jogar')) response = aiResponses["como jogar"];
                else if (lowerMsg.includes('classe') || lowerMsg.includes('personagem')) response = aiResponses.classes;
                else if (lowerMsg.includes('história') || lowerMsg.includes('historia') || lowerMsg.includes('enredo')) response = aiResponses.história;
                else if (lowerMsg.includes('comando') || lowerMsg.includes('controle') || lowerMsg.includes('ação')) response = aiResponses.comandos;
                else if (lowerMsg.includes('pré-venda') || lowerMsg.includes('pre-venda') || lowerMsg.includes('vantagem')) response = aiResponses["pré-venda"];
                else if (lowerMsg.includes('comprar') || lowerMsg.includes('adquirir') || lowerMsg.includes('compra')) response = aiResponses.comprar;
                
               
                setTimeout(() => {
                    addMessage(false, response);
                }, 500 + Math.random() * 1000);
            }

            function handleSendMessage() {
                const message = elements.chatInput.value.trim();
                if (message) {
                    addMessage(true, message);
                    elements.chatInput.value = '';
                    getAIResponse(message);
                }
            }

            elements.sendMessage.addEventListener('click', handleSendMessage);

            elements.chatInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    handleSendMessage();
                }
            });

            
            elements.chatContainer.classList.remove('open');
        });
    </script>
